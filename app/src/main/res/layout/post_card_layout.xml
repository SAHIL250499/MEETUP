<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        style="@style/Widget.MaterialComponents.CardView"
        app:strokeColor="@color/colorLight"
        app:strokeWidth="1dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/colorWhite">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.theophrast.ui.widget.SquareImageView
                android:id="@+id/post_image_card"
                android:layout_width="134dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/default_img">

            </com.theophrast.ui.widget.SquareImageView>

            <LinearLayout
                android:id="@+id/linearLayout53"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/post_image_card">

                <TextView
                    android:id="@+id/card_post_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/source_sans_semibold"
                    android:text="thedipeshpatil"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

            <TextView
                android:id="@+id/card_post_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayout53"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/monts_med"
                android:layout_marginEnd="8dp"
                android:textSize="16sp"
                android:layout_toEndOf="@+id/post_image_card"
                android:text="@string/default_status" />

            <LinearLayout
                android:id="@+id/textView89"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@+id/card_post_status"
                android:layout_toEndOf="@+id/post_image_card"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/card_like_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/source_sans_semibold"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="Like"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/card_unlike_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/source_sans_semibold"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="Likes"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/card_nooflikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/source_sans_semibold"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="Likes"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>

        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>