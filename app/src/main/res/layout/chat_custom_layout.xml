<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLight">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/custom_bar_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/default_img" />

    <TextView
        android:id="@+id/custom_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/source_sans_semibold"
        android:text="Display Name"
        android:textColor="@color/colorBlack"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/custom_bar_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_bar_title"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/monts_reg"
        android:text="Last Seen"
        android:textColor="@color/colorDark"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/online_dot"
        android:layout_width="11dp"
        android:layout_height="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="38dp"
        android:visibility="invisible"
        android:layout_marginEnd="-10dp"
        android:layout_toStartOf="@+id/custom_bar_image"
        app:srcCompat="@drawable/online_default" />

</RelativeLayout>