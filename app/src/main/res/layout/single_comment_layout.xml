<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingEnd="24dp"
    android:paddingTop="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/single_comment_profile"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:src="@drawable/default_img" />

    <TextView
        android:id="@+id/single_comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/single_comment_profile"
        android:fontFamily="@font/source_sans_semibold"
        android:text="thedipeshpatil"
        android:textColor="@color/colorBlack"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/single_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/single_comment_name"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/single_comment_profile"
        android:autoSizeTextType="uniform"
        android:textColor="@color/colorDark"
        android:background="@drawable/message_text_background"
        android:fontFamily="@font/monts_med"
        android:padding="8dp"
        android:text="TextView"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/single_comment_verified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/single_comment_name"
        android:drawableRight="@drawable/ic_correct"
        android:drawableTint="@color/colorInfo"
        android:fontFamily="@font/source_sans_semibold"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:translationX="-10dp"
        android:translationY="-3dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/single_comment"
        android:layout_alignParentStart="true"
        android:layout_marginStart="54dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/single_comment_like_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingHorizontal="4dp"
            android:textColor="@color/colorDark"
            android:fontFamily="@font/source_sans_semibold"
            android:text="Like" />

        <TextView
            android:id="@+id/single_comment_unlike_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:visibility="gone"
            android:paddingHorizontal="4dp"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/source_sans_semibold"
            android:text="Liked" />

        <TextView
            android:id="@+id/single_comment_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingHorizontal="4dp"
            android:fontFamily="@font/source_sans_semibold"
            android:text="2 Likes" />

        <TextView
            android:id="@+id/single_comment_more_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingHorizontal="4dp"
            android:fontFamily="@font/source_sans_semibold"
            android:text="More" />

        <TextView
            android:id="@+id/comment_date_posted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="4dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/source_sans_semibold"
            android:text="2m" />


    </LinearLayout>

</RelativeLayout>